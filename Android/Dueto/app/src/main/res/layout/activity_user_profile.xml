<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/content_add_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars = "vertical"

    tools:context="dueto.dueto.UserProfileActivity"

    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/newBlue"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/firstView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon"
                app:civ_border_color="@color/Black"
                app:civ_border_width="1dp" />
            <!--<ImageButton-->
                <!--android:id="@+id/firstView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:background="@null"-->
                <!--android:src="@drawable/icon" />-->
            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="-40dp"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/settings" />

            <ImageButton
                android:id="@+id/musicButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:layout_marginTop="-25dp"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/note" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:hint="User Profile"
                android:maxLength="10"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@null"
                android:text="Following"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/White" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@null"
                android:text="Followers"
                android:layout_marginTop="-40dp"
                android:textColor="@color/White" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-40dp"
                android:background="@null"
                android:text="Posts"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/profileLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-95dp"
                android:hint="Location"
                android:textColor="@color/White"
                android:maxLength="15"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profileDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp"
                android:hint="Description"
                android:textColor="@color/White"
                android:maxLength="30"
                android:textSize="15sp" />

        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardBottom"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            app:tabSelectedTextColor="#00aced"
            card_view:cardBackgroundColor="@color/DWhite">

            <Button
                android:id="@+id/button1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/button_background"
                android:onClick="ChangeFragment"
                android:text="Posts" />

            <Button
                android:id="@+id/button2"
                android:layout_width="186dp"

                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/button_background"
                android:onClick="ChangeFragment"
                android:text="Reposts" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_place"
        android:name="dueto.dueto.PostsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>



</LinearLayout >

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dueto.dueto.UserProfileActivity"

    android:background="@color/White"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/DBlue"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/firstView"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="User Profile"
                android:textColor="@color/White"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginTop="-16dp"
                android:layout_marginLeft="30dp"
                android:background="@null"
                android:textColor="@color/White"
                android:text="Posts" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="-45dp"
                android:background="@null"
                android:textColor="@color/White"
                android:text="Followers" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:textColor="@color/White"
                android:text="Following" />

        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardTop"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:contentPadding="-10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Description..."
                android:textSize="12sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardMiddle"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="10dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:contentPadding="-6dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:text="Location..."
                android:textSize="10sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardBottom"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            app:tabSelectedTextColor="#00aced"
            card_view:cardBackgroundColor="@color/DWhite">

            <Button
                android:id="@+id/button1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/button_background"
                android:onClick="ChangeFragment"
                android:text="Posts" />

            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"

                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_background"
                android:onClick="ChangeFragment"
                android:text="Reposts" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_place"
        android:name="dueto.dueto.PostsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>

</LinearLayout >
